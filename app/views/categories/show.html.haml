%h1
  =h @category.name

%ul.actions
  %li
    =link_to "Dodaj pytanie", new_category_question_path(@category)
  %li
    =link_to "Edytuj kategorię", edit_category_path(@category)
  - if @category.owned_by?(current_user)  
    %li
      =link_to "Usuń kategorię", category_path(@category), :method => :delete, :confirm => 'Czy chcesz usunąć kategorię i wszystkie pytania, które do niej należą?'

%h2
  Lista pytań

%ul
  - @category.questions.each do |question|
    %li
      = link_to h(question.text), question_path(question)

